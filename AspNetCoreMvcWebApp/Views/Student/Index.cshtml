@model AspNetCoreMvcWebApp.Models.StudentsDetail;

<h1>Student detail</h1>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Courses)
        </dt>
        @foreach (var courseName in Model.Courses)
        {
            <dt class="col-sm-2">
                @Html.DisplayFor(model => courseName)
            </dt>
        }
    </dl>

</div>
